@model MyFitnessTracker.Models.UserDataDTO
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container mt-5">
    <h2 class="mb-4">Are you sure you want to delete this User?</h2>

    <form action="/Users/Delete/@Model.UserId" method="POST">
        <a href="/Workout/List" class="btn btn-secondary">Cancel</a>
        <input type="submit" class="btn btn-danger" value="Confirm Delete" />
    </form>
</div>

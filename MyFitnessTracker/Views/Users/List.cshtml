@model IEnumerable<MyFitnessTracker.Models.UserDataDTO>
@{
    ViewBag.Title = "List";
}

<div class="container mt-5">
    <h2>User List</h2>
    <p><a href="/Users/New/" class="btn btn-outline-primary">Add New User</a></p>
    <hr />

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            Name: <a href="/Workout/Details/@user.UserId">@user.FName @user.LName</a>
                        </h5>
                        <h6 class="card-subtitle mb-2 text-muted">
                            Phone Number: @user.PhoneNumber
                        </h6>
                        <p class="card-text">Email: @user.Email</p>
                        <p class="card-text">Joining Date: @user.JoinDate</p>
                        <div class="mt-3">
                            <a href="/Users/Edit/@user.UserId" class="btn btn-outline-info">Update Details</a>
                            <a href="/Users/DeleteConfirm/@user.UserId" class="btn btn-outline-danger ms-2">Delete User</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

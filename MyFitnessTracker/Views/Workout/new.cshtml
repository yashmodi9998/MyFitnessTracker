<script src="~/Scripts/scripts.js"></script>
@{
    ViewBag.Title = "Create";
}

<div class="container mt-5">
    <h2 class="mb-4">Create Workout</h2>

    <form action="/Workout/Create" method="POST">
        <input type="hidden" name="UserId" value="@ViewBag.UserID" />

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="workoutDate" class="form-label">Workout Date</label>
                    <input id="workoutDate" class="form-control" type="date" name="WorkoutDate" />
                </div>
                <div class="mb-3">
                    <label for="duration" class="form-label">Duration</label>
                    <input id="duration" class="form-control" type="number" name="Duration" />
                </div>
                <div class="mb-3">
                    <label for="exerciseDropdown" class="form-label">Select Exercise</label>
                    <select id="exerciseDropdown" class="form-select" name="ExerciseID" onchange="updateSubExerciseDropdown()">
                        <option value="-1">-- Select Exercise --</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="subExerciseDropdown" class="form-label">Select Sub-Exercise</label>
                    <select id="subExerciseDropdown" class="form-select" name="SubExerciseID">
                        <option value="-1">-- Select Sub-Exercise --</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="weight" class="form-label">Weight</label>
                    <input id="weight" class="form-control" type="number" name="Weight" />
                </div>
                <div class="mb-3">
                    <label for="reps" class="form-label">Reps</label>
                    <input id="reps" class="form-control" type="number" name="Reps" />
                </div>
                <div class="mb-3">
                    <label for="notes" class="form-label">Notes</label>
                    <input id="notes" class="form-control" type="text" name="Notes" />
                </div>
            </div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Add Workout</button>
        </div>
    </form>
</div>
